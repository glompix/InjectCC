@model InjectCC.Model.Location

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Location</legend>

        @Html.HiddenFor(model => model.LocationId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Ordinal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ordinal)
            @Html.ValidationMessageFor(model => model.Ordinal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TimeUntilNextInjection)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TimeUntilNextInjection)
            @Html.ValidationMessageFor(model => model.TimeUntilNextInjection)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LocationSetId, "LocationSet")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LocationSetId", String.Empty)
            @Html.ValidationMessageFor(model => model.LocationSetId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
