@model IEnumerable<InjectCC.Model.Location>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Ordinal
        </th>
        <th>
            TimeUntilNextInjection
        </th>
        <th>
            LocationSet
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ordinal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeUntilNextInjection)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationSet.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LocationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LocationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LocationId })
        </td>
    </tr>
}

</table>
