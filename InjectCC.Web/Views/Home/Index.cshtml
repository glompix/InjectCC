@section head
{
    <title>inject.cc - Injection Tracker</title>
}

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('.phone-login-toggle').click(function () {
                var $loginCompact = $(this).siblings('.login-compact');
                if ($loginCompact.is(':visible')) {
                    $loginCompact.attr('style', '');
                    $(this).text('Sign in');
                }
                else {
                    $loginCompact.attr('style', 'display: block;');
                    $(this).text('Cancel');
                }
            });
        });
    </script>
}

