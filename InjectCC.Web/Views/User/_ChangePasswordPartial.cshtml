@model InjectCC.Web.ViewModels.User.SettingsModel

<fieldset class="form-horizontal">
    <legend>Change Password</legend>
    <div class="control-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "control-label", @for = "OldPasswordTextBox" })
        <div class="controls">
            @Html.PasswordFor(m => m.OldPassword, new { id = "OldPasswordTextBox" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label", @for = "NewPasswordTextBox" })
        <div class="controls">
            @Html.PasswordFor(m => m.NewPassword, new { id = "NewPasswordTextBox" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label", @for = "ConfirmPasswordTextBox" })
        <div class="controls">
            @Html.PasswordFor(m => m.ConfirmPassword, new { id = "ConfirmPasswordTextBox" })
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn">Change Password</button>
        </div>
    </div>
</fieldset>